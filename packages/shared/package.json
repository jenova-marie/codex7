{
  "name": "@codex7/shared",
  "version": "0.1.0",
  "type": "module",
  "description": "Shared types, models, and utilities for Codex7 documentation MCP server",
  "license": "AGPL-3.0",
  "author": "Jenova Marie <jenova-marie@pm.me>",
  "repository": {
    "type": "git",
    "url": "https://github.com/jenova-marie/codex7.git",
    "directory": "packages/shared"
  },
  "keywords": [
    "codex7",
    "mcp",
    "documentation",
    "types",
    "models"
  ],
  "files": [
    "lib"
  ],
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "exports": {
    ".": {
      "import": "./lib/index.js",
      "types": "./lib/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc && tsc --project tsconfig.models.json && tsx src/scripts/generate-index-dts.ts",
    "json:schema": "tsx src/scripts/ts-to-json.ts src/models src/models/json",
    "make": "pnpm build && pnpm json:schema && pnpm pack",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "clean": "rm -rf lib dist *.tgz",
    "dev": "tsc --watch"
  },
  "dependencies": {
    "@jenova-marie/ts-rust-result": "file:../../../ts-rust-result/ts-rust-result.tgz",
    "bson": "^6.10.2"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "@vitest/coverage-v8": "^2.1.8",
    "tsx": "^4.20.6",
    "typescript": "^5.7.3",
    "typescript-json-schema": "^0.65.1",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  }
}
