{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "bundler",
    "rootDir": "./src",
    "outDir": "lib",
    "target": "ES2021",
    "lib": ["ES2021"],
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": true,
    "emitDeclarationOnly": false,
    "composite": true,
    "baseUrl": "./src",
    "paths": {
      "@/errors/*": ["errors/*"],
      "@/errors": ["errors"],
      "@/models/*": ["models/*"],
      "@/models": ["models"],
      "@/classes/*": ["classes/*"],
      "@/classes": ["classes"],
      "@/decorators/*": ["decorators/*"],
      "@/decorators": ["decorators"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "lib", "src/models/json", "src/models/drizzle"]
}
