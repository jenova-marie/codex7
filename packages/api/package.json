{
  "name": "@codex7/api",
  "version": "0.1.0-alpha",
  "description": "🌐 REST API service for Codex7",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
