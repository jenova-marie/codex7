{
  "name": "@upstash/codex7-mcp",
  "version": "1.0.0",
  "mcpName": "io.github.upstash/codex7",
  "description": "MCP server for Codex7",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "build": "tsc && chmod 755 dist/index.js && chmod 755 dist/cli/index.js",
    "format": "prettier --write .",
    "lint": "eslint \"**/*.{js,ts,tsx}\" --fix",
    "lint:check": "eslint \"**/*.{js,ts,tsx}\"",
    "start": "node dist/index.js --transport http",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "pack-mcpb": "bun install && bun run build && rm -rf node_modules && bun install --production && mv mcpb/.mcpbignore .mcpbignore && mv mcpb/manifest.json manifest.json && mv public/icon.png icon.png && mcpb validate manifest.json && mcpb pack . mcpb/codex7.mcpb && mv manifest.json mcpb/manifest.json && mv .mcpbignore mcpb/.mcpbignore && mv icon.png public/icon.png && bun install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/upstash/codex7.git"
  },
  "keywords": [
    "modelcontextprotocol",
    "mcp",
    "codex7",
    "vibe-coding",
    "developer tools",
    "documentation",
    "context"
  ],
  "author": "abdush",
  "license": "MIT",
  "type": "module",
  "bin": {
    "codex7-mcp": "dist/index.js",
    "codex7": "dist/cli/index.js"
  },
  "files": [
    "dist"
  ],
  "bugs": {
    "url": "https://github.com/upstash/codex7/issues"
  },
  "homepage": "https://github.com/upstash/codex7#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.5",
    "@qdrant/js-client-rest": "^1.12.0",
    "commander": "^14.0.0",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.38.3",
    "openai": "^4.77.0",
    "postgres": "^3.4.5",
    "undici": "^6.6.3",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/node": "^22.13.14",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vitest/coverage-v8": "^4.0.15",
    "drizzle-kit": "^0.30.1",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.5",
    "prettier": "^3.6.2",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.28.0",
    "vitest": "^4.0.15"
  }
}
